    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "parse5": "^8.0.0",
    "remark": "^15.0.1",
    "remark-directive": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx": "^3.1.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "xml2js": "^0.6.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/js-yaml": "^4.0.9",
