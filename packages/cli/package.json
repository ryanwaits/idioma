{
  "name": "idioma-cli",
  "version": "0.0.16",
  "description": "CLI for Idioma - Internationalization engine with smart defaults",
  "keywords": [
    "i18n",
    "localization",
    "translation",
    "ai",
    "cli"
  ],
  "homepage": "https://github.com/ryanwaits/idioma",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanwaits/idioma.git"
  },
  "license": "MIT",
  "author": "Ryan Waits",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
