{
  "name": "idioma",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:sdk && bun run build:cli",
    "build:sdk": "cd packages/sdk && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "dev": "bun run --parallel dev:sdk dev:cli",
    "dev:sdk": "cd packages/sdk && bun run dev",
    "dev:cli": "cd packages/cli && bun run dev",
    "lint": "biome check packages/*/src/",
    "lint:fix": "biome check --write packages/*/src/",
    "format": "biome format --write packages/*/src/",
    "test": "bun run test:sdk && bun run test:cli",
    "test:sdk": "cd packages/sdk && bun test",
    "test:cli": "cd packages/cli && bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/bun": "latest",
    "@types/node": "^24.0.14",
    "idioma-cli": "workspace:*"
  }
}
