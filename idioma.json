{
  "projectId": "prj_53b8dc3dfc3160334916",
  "locale": {
    "source": "en",
    "targets": ["es", "fr"]
  },
  "files": {
    "mdx": {
      "include": ["content/docs/[locale]/**/*.mdx"]
    },
    "json": {
      "include": ["examples/locales/[locale]/**/*.json"],
      "exclude": ["**/package.json", "**/tsconfig.json", "**/*.config.json"],
      "skipEmptyStrings": true
    },
    "yaml": {
      "include": [
        "examples/locales/[locale]/**/*.yaml",
        "examples/locales/[locale]/**/*.yml"
      ],
      "preserveComments": true
    },
    "html": {
      "include": [
        "examples/locales/[locale]/**/*.html",
        "examples/locales/[locale]/**/*.htm"
      ],
      "translatableAttributes": [
        "alt", "title", "placeholder", "aria-label", "aria-description",
        "data-tooltip", "data-title", "data-description"
      ],
      "skipTags": ["script", "style", "code", "pre", "svg", "math"]
    },
    "xml": {
      "include": ["examples/locales/[locale]/**/*.xml"],
      "translatableAttributes": [
        "label", "title", "description", "tooltip", "help", "message", "text"
      ],
      "skipTags": ["script", "style", "code"]
    }
  },
  "translation": {
    "frontmatterFields": ["title", "description", "sidebarTitle"],
    "jsxAttributes": [
      "title",
      "description",
      "tag",
      "alt",
      "placeholder",
      "label"
    ],
    "skipPatterns": [],
    "provider": "anthropic"
  }
}
