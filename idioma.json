{
  "projectId": "prj_53b8dc3dfc3160334916",
  "locale": {
    "source": "en",
    "targets": ["es", "fr"]
  },
  "files": {
    "mdx": {
      "include": ["content/docs/[locale]/**/*.mdx"]
    },
    "json": {
      "include": ["examples/locales/[locale]/**/*.json"],
      "exclude": ["**/package.json", "**/tsconfig.json", "**/*.config.json"],
      "skipEmptyStrings": true
    },
    "yaml": {
      "include": [
        "examples/locales/[locale]/**/*.yaml",
        "examples/locales/[locale]/**/*.yml"
      ],
      "preserveComments": true
    }
  },
  "translation": {
    "frontmatterFields": ["title", "description", "sidebarTitle"],
    "jsxAttributes": [
      "title",
      "description",
      "tag",
      "alt",
      "placeholder",
      "label"
    ],
    "skipPatterns": [],
    "provider": "anthropic"
  }
}
